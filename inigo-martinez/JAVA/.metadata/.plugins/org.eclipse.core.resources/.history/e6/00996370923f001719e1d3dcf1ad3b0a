package prueba;

import java.util.ArrayList;

public class Orcos {
	
	ArrayList<Orco> Orcos = new ArrayList<Orco>();

	public Orcos(int tamanio) {
		Creacion(tamanio);
	}

	@Override
	public ArrayList<Humano> Creacion(int tamanio) {

		int danio, armadura, PV;
		
		for (int i = 0; i < tamanio; i++) {
			
			danio = Integer.parseInt(Double.toString(Math.random() * 3));
			armadura = Integer.parseInt(Double.toString(Math.random() * 5));
			PV = Integer.parseInt(Double.toString(Math.random() * 7));
			
			Humano soldado = new Humano(danio, armadura, PV);
			
			Humanos.add(soldado);
		}
		
		return Orcos;

	}

	@Override
	public int combate(Object enemigo) {
		
		int totalDanio=0, bajas;
		
		for(int i = 0; i<=Humanos.size();i++){
			
			totalDanio+=Humanos.get(i).atacar();
			
		}
		
		bajas = totalDanio%enemigo.PV;
		
		return bajas;

	}

}
