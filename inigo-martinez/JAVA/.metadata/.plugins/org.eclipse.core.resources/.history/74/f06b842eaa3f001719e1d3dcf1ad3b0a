package prueba;

import java.util.ArrayList;

public class Orcos implements Razas{
	
	ArrayList<Orco> Orcos = new ArrayList<Orco>();

	public Orcos(int tamanio) {
		Creacion(tamanio);
	}

	public ArrayList<Orco> Creacion(int tamanio) {

		int danio, armadura, PV;
		
		for (int i = 0; i < tamanio; i++) {
			
			Orco soldado = new Orco();
			
			Orcos.add(soldado);
		}
		
		return Orcos;

	}

	@Override
	public int combate() {
		
		int totalDanio=0, bajas;
		
		for(int i = 0; i<=Orcos.size();i++){
			
			totalDanio+=Orcos.get(i).atacar();
			
		}
		
		bajas = totalDanio%enemigo.PV;
		
		return bajas;

	}

}
